{
  "family": "user-service-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::348184816643:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::348184816643:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "user-service",
      "image": "348184816643.dkr.ecr.ap-southeast-1.amazonaws.com/user-service/user-service:latest",
      "portMappings": [
        { "containerPort": 3001, "protocol": "tcp" }
      ],
      "essential": true,
      "environment": [],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -qO- http://localhost:3001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/user-service",
          "awslogs-region": "<AWS_REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}