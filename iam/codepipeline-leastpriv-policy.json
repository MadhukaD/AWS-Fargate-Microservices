{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ReadWriteArtifacts",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::codepipeline-artifacts-348184816643",
        "arn:aws:s3:::codepipeline-artifacts-348184816643/*"
      ]
    },
    {
      "Sid": "StartBuild",
      "Effect": "Allow",
      "Action": [
        "codebuild:StartBuild",
        "codebuild:BatchGetBuilds"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CreateDeployment",
      "Effect": "Allow",
      "Action": [
        "codedeploy:CreateDeployment",
        "codedeploy:GetDeployment",
        "codedeploy:GetDeploymentConfig"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowPassRole",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:iam::348184816643:role/codebuild-service-role",
        "arn:aws:iam::348184816643:role/CodeDeployECSServiceRole",
        "arn:aws:iam::348184816643:role/ecsTaskExecutionRole"
      ]
    }
  ]
}